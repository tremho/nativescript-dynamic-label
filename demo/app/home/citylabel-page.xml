<Page xmlns="http://schemas.nativescript.org/tns.xsd" navigatingTo="navigatingTo"
      xmlns:dl="nativescript-dynamic-label"
      class="page"
>


    <StackLayout>
        <Label className="m-b-20" textWrap="true" text="This shows a set of labels the same size where different text is given and it is meant to display reasonably for widely varying lengths of text. This is a closer to a real-world example of how this plugin control is meant to be used."/>
        <ScrollView height="1000">
            <StackLayout>
                <dl:DynamicLabel className="cityLabel" text="Seattle, WA"/>
                <dl:DynamicLabel className="cityLabel" text="San Francisco, CA"/>
                <dl:DynamicLabel className="cityLabel" text="Albuquerque, NM"/>
                <dl:DynamicLabel className="cityLabel" text="New York, NY"/>
                <!-- with the following, I insert line breaks in the text directly, rather than let the breaker guess at it. this improves format choices and fit -->
                <dl:DynamicLabel className="cityLabel" text="Disneyland,&#xA;Anaheim, CA"/>
                <dl:DynamicLabel className="cityLabel" text="National Mall,&#xA;Washington, D.C."/>
                <dl:DynamicLabel className="cityLabel" text="Piazza San Pietro,&#xA;00120 CittÃ  del Vaticano,&#xA;Vatican City"/>
                <Button className="m-t-20" text="Main Menu" tap="onMenu"/>
            </StackLayout>
        </ScrollView>
    </StackLayout>
</Page>
