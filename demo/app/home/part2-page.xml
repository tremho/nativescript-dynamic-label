<Page xmlns="http://schemas.nativescript.org/tns.xsd" navigatingTo="onNavigatingTo"
      xmlns:dl="nativescript-dynamic-label"
      class="page"
>

    <Page.actionBar>
        <ActionBar title="DynamicLabel Demo" icon="" class="action-bar">
        </ActionBar>
    </Page.actionBar>

    <StackLayout>
        <Label textWrap='true' text="This bit of demo code creates a DynamicLabel programmatically, and adds it to this page. Then, new label text is set to the label with each new button press, and we see it format to handle the new text."/>

    <StackLayout id="container"/>
    <Button className='demoButton' text="next label text" tap="onNext"/>
    <Button className='demoButton' text="go back" tap="onBack"/>
    </StackLayout>
</Page>
